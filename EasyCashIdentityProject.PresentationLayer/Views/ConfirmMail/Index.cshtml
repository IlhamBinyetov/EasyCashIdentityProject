@model ConfirmMailViewModel
@{
    Layout = null;
}

<link href="~\lib\bootstrap\dist\css\bootstrap.min.css" rel="stylesheet" />
<div class="container">
    <br />
    <br />
    <form method="post">
        <h2>User Email Address: @ViewBag.v</h2>
        <br />
        <label> UserId</label>
        <input type="text" class="form-control" asp-for="Mail" value="@ViewBag.v" />
        <br />
        <label> Enter the 6-digit password that send to your Email Address</label>
        <input type="text" class="form-control" asp-for="ConfirmCode" />
        <br />
        <button class="btn btn-primary">Activate your account</button>
    </form>
</div>
